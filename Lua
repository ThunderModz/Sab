-- Buttons
local function createButton(name, sizeX, posX, text, color)
	local btn = Instance.new("TextButton")
	btn.Name = name
	btn.Size = UDim2.new(0,sizeX,0,28)
	btn.Position = UDim2.new(1,posX,0,3)
	btn.AnchorPoint = Vector2.new(1,0)
	btn.BackgroundColor3 = color
	btn.Text = text
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 14
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.BorderSizePixel = 0
	btn.Parent = titleBar
	local c = Instance.new("UICorner", btn)
	c.CornerRadius = UDim.new(0,6)
	return btn
end

local moveButton = createButton("MoveButton",70,-200,"Move",Color3.fromRGB(40,40,40))
local minimizeButton = createButton("MinimizeButton",28,-120,"-",Color3.fromRGB(255,200,0))
local closeButton = createButton("CloseButton",28,-80,"X",Color3.fromRGB(220,60,60))

